                            <pre class="mb-0"><%= JSON.stringify(error, null, 2) %></pre>
                        </div>
                    <% } %>

                    <div class="mt-4">
                        <a href="javascript:history.back()" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Voltar
                        </a>
                        <a href="/" class="btn btn-primary">
