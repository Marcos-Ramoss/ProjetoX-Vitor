                    <h2><i class="fas fa-exclamation-triangle"></i> Erro</h2>
                </div>
                <div class="card-body">
                    <h4 class="card-title"><%= message %></h4>
                    
                    <% if (process.env.NODE_ENV === 'development' && error) { %>
