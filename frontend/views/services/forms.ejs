<%- include('../../partials/header') %>
<div class="container mt-5">
  <h2><%= service ? 'Editar Serviço' : 'Cadastrar Novo Serviço' %></h2>
  <form method="POST" action="<%= service ? '/services/' + service._id : '/services' %>">
    <% if (service) { %>
      <input type="hidden" name="_method" value="PUT">
    <% } %>

    <div class="mb-3">
      <label>Título do Serviço</label>
      <input type="text" name="title" class="form-control" value="<%= service ? service.title : '' %>" required />
    </div>

    <div class="mb-3">
      <label>Descrição</label>
      <textarea name="description" class="form-control" required><%= service ? service.description : '' %></textarea>
    </div>

    <div class="mb-3">
      <label>Categoria</label>
      <input type="text" name="category" class="form-control" value="<%= service ? service.category : '' %>" required />
    </div>

    <div class="mb-3">
      <label>Preço Estimado (R$)</label>
      <input type="number" step="0.01" name="price" class="form-control" value="<%= service ? service.price : '' %>" required />
    </div>

    <div class="mb-3">
      <label>Localização</label>
      <input type="text" name="location" class="form-control" value="<%= service ? service.location : '' %>" />
    </div>

    <div class="mb-3 form-check">
      <input type="checkbox" name="available" value="true" class="form-check-input" <%= service && service.available ? 'checked' : '' %> />
      <label class="form-check-label">Disponível para contratação</label>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
  </form>
</div>
<%- include('../../partials/footer') %>