<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ProjetoX - Marketplace de Serviços</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
  <!-- Loader CSS -->
  <link rel="stylesheet" href="/css/loader.css">
  <!-- Forms CSS -->
  <link rel="stylesheet" href="/css/forms.css">
  <!-- Radio Buttons CSS -->
  <link rel="stylesheet" href="/css/radio-buttons.css">
  <!-- Navbar CSS -->
  <link rel="stylesheet" href="/css/navbar.css">
  <!-- Forms CSS -->
  <link rel="stylesheet" href="/css/form.css">
</head>
<body>
  <!-- Loader Component -->
  <div class="loader">
    <span>&lt;</span>
    <span>LOADING</span>
    <span>/&gt;</span>
  </div>

  <!-- Loader JavaScript -->
  <script src="/js/loader.js"></script>

  <header>
    <nav class="navbar navbar-expand-lg">
      <div class="container">
        <a class="navbar-brand neon-blue-text" href="/"><i class="fas fa-tools me-2"></i>Serviços+</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/services/search">
                <i class="fas fa-search me-1"></i> Buscar Serviços
              </a>
            </li>
            
            <% if (user) { %>
              <% if (user.type === 'company') { %>
                <li class="nav-item">
                  <a class="nav-link" href="/services/new">
                    <i class="fas fa-plus-circle me-1"></i> Novo Serviço
                  </a>
                </li>
              <% } %>
              
              <li class="nav-item">
                <a class="nav-link" href="/profile">
                  <i class="fas fa-user me-1"></i> <%= user.name %>
                </a>
              </li>
              
              <li class="nav-item">
                <form action="/auth/logout" method="POST" class="d-inline">
                  <button type="submit" class="nav-link btn btn-link">
                    <i class="fas fa-sign-out-alt me-1"></i> Sair
                  </button>
                </form>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/services/new">
                  <i class="fas fa-briefcase me-1"></i> Oferecer Serviços
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/auth/login">
                  <i class="fas fa-sign-in-alt me-1"></i> Login
                </a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <!-- Elemento invisível para trigger de hover da navbar -->
  <div class="navbar-hover-trigger"></div>

  <script>
    const navbar = document.querySelector('.navbar');
    const navbarHoverTrigger = document.querySelector('.navbar-hover-trigger');
    const isHomePage = window.location.pathname === '/';

    if (isHomePage) {
      // Na página inicial: Visível por padrão, esconde no scroll down, mostra no scroll up
      let lastScrollTop = 0;

      window.addEventListener('scroll', function() {
        const currentScroll = window.pageYOffset || document.documentElement.scrollTop;

        if (currentScroll > lastScrollTop && currentScroll > navbar.offsetHeight) {
          navbar.classList.add('navbar-hidden');
        } else if (currentScroll < lastScrollTop) {
          navbar.classList.remove('navbar-hidden');
        }

        lastScrollTop = currentScroll;
      });

      // Remover quaisquer estilos de ocultação iniciais aplicados pelo CSS global se estiver na home
      navbar.classList.remove('navbar-hidden');

    } else {
      // Em outras páginas: Oculta por padrão, mostra apenas no hover
      navbar.classList.add('navbar-hidden'); // Garante que comece oculta

      window.removeEventListener('scroll', function() {}); // Remove qualquer listener de scroll

      navbarHoverTrigger.addEventListener('mouseenter', function() {
        navbar.classList.remove('navbar-hidden');
      });

      navbarHoverTrigger.addEventListener('mouseleave', function() {
        navbar.classList.add('navbar-hidden');
      });

      navbar.addEventListener('mouseenter', function() {
          navbar.classList.remove('navbar-hidden');
      });

      navbar.addEventListener('mouseleave', function() {
          navbar.classList.add('navbar-hidden');
      });
    }
  </script>

